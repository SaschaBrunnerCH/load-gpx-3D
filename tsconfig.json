{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "ES2019"
  ],
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/*", "src/widgets/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
